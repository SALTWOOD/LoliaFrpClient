<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LoliaFrpClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LoliaFrpClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LoliaFrpClient">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="TitleBarGrid" Grid.Row="0" Height="32" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6,6,0,0">
                <Button x:Name="BackButton"
                        Width="32" Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BackButton_Click">
                    <Border Width="24" Height="24"
                            CornerRadius="4"
                            Background="#ff81ac"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Image Source="ms-appx:///Assets/AppIcon_Black.svg"
                               Width="16" Height="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Button>
                <TextBlock Text="Lolia FRP Client" 
                           VerticalAlignment="Center" 
                           Margin="8,0,0,0"
                           FontFamily="Comfortaa"
                           FontSize="16"
                           FontWeight="Bold"
                           CharacterSpacing="50"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Grid>

        <NavigationView x:Name="MainNavigationView" Grid.Row="1" PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" IsSettingsVisible="False">

            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="Page1NavItem" Content="Page 1" Tag="Page1">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="Page2NavItem" Content="Page 2" Tag="Page2">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Globe"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="Page3NavItem" Content="Page 3" Tag="Page3">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Folder"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="Page4NavItem" Content="Page 4" Tag="Page4">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Contact"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Name="ThemeNavItem" Content="深色模式" Tag="Theme">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="View"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="SettingsNavItem" Content="Settings" Tag="Settings" Icon="Setting"/>
            </NavigationView.FooterMenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
