<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LoliaFrpClient.Pages.Page3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LoliaFrpClient.Pages"
    xmlns:models="using:LoliaFrpClient.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel Spacing="16">
            <!-- 标题和刷新按钮 -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="流量统计" 
                           Style="{StaticResource TitleTextBlockStyle}"/>
                
                <Button Grid.Column="1" 
                        Content="刷新" 
                        Click="OnRefreshClick"/>
            </Grid>

            <!-- 总体流量统计 -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="总体流量统计" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"/>
                    
                    <ProgressBar Value="{x:Bind TrafficStats.TrafficUsagePercentage, Mode=OneWay}" 
                                 Maximum="100" Height="8"/>
                    
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="流量限制" Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind TrafficStats.FormattedTrafficLimit, Mode=OneWay}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="已用流量" Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind TrafficStats.FormattedTrafficUsed, Mode=OneWay}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Spacing="4">
                            <TextBlock Text="剩余流量" Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind TrafficStats.FormattedTrafficRemaining, Mode=OneWay}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 隧道流量统计 -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="隧道流量统计" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"/>
                    
                    <ListView x:Name="TunnelTrafficListView"
                              ItemsSource="{x:Bind TunnelTraffics, Mode=OneWay}"
                              MaxHeight="400">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:TunnelTrafficViewModel">
                                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid ColumnSpacing="12" RowSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{x:Bind TunnelName, Mode=OneWay}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   FontWeight="SemiBold"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="入站: {x:Bind FormattedInbound, Mode=OneWay}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Text="出站: {x:Bind FormattedOutbound, Mode=OneWay}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{x:Bind FormattedTotal, Mode=OneWay}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   FontWeight="SemiBold"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- 加载指示器 -->
            <ProgressRing x:Name="LoadingRing"
                          IsActive="False"
                          Width="48"
                          Height="48"
                          HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
